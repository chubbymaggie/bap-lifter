if [ -z $OS ]
then
  OS=linux
fi
OCAMLSANDBOX_RAW=`mktemp -dt ocaml_sandbox.XXXXXX`
if [ $OS == "windows" ]
then
  export OCAMLSANDBOX=$(cygpath -w $OCAMLSANDBOX_RAW)
else
  export OCAMLSANDBOX=$OCAMLSANDBOX_RAW
fi
export OCAMLPATH=$OCAMLSANDBOX
export OCAMLFIND_DESTDIR=$OCAMLSANDBOX
export CONFIGUREFLAGS="--prefix $OCAMLSANDBOX"
OCAMLSANDBOX_LDCONF=$OCAMLSANDBOX/ld.conf
cp `ocamlfind printconf ldconf | dos2unix` $OCAMLSANDBOX_LDCONF
chmod u+rwx $OCAMLSANDBOX_LDCONF
export OCAMLFIND_LDCONF=$OCAMLSANDBOX_LDCONF
export CAML_LD_LIBRARY_PATH=$OCAMLSANDBOX:$CAML_LD_LIBRARY_PATH
export PATH=$OCAMLSANDBOX/bin:$PATH
